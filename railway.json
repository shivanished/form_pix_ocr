{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "environment": {
      "MAGICK_HOME": "/usr",
      "LD_LIBRARY_PATH": "$MAGICK_HOME/lib:$LD_LIBRARY_PATH",
      "PATH": "$MAGICK_HOME/bin:$PATH"
    }
  },
  "deploy": {
    "startCommand": "hypercorn main:app --bind \"0.0.0.0:8000\""
  }
}
